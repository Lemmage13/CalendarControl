<UserControl x:Class="EventCalendarControl.EventControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventCalendarControl"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Fill="Orange"/>
        <TextBlock Name="TimeBox" Grid.Column="0" VerticalAlignment="Center"/>
        <Rectangle Grid.Column="1" Fill="Orange"/>
        <TextBlock Name="NameBox" Grid.Column="1" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
